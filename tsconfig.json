    "esModuleInterop": true,
    "sourceMap": false,
    "outDir": "dist",  // TS文件编译后会放入到此文件夹内
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
  }
}

